<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mcda5550.blankapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BMI Calculator"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.mcda5550.bmiapp.MainActivity">
            <!--android:label="BMI Calculator"-->
            <!--android:theme="@style/AppTheme.NoActionBar"-->
            <!--&gt;-->
        </activity>
        <activity android:name="com.example.mcda5550.bmiapp.activity_calculate_bmi" />
        <activity android:name="com.example.mcda5550.bmiapp.activity_bmi_list" />
        <activity
            android:name="com.example.mcda5550.bmiapp.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>